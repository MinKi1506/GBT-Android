<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="171dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_endDate"
            android:layout_width="144dp"
            android:layout_height="39dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="마감일"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="43dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="201dp"
            android:layout_height="39dp"
            android:gravity="center"
            android:text="챌린지 제목"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="21dp" />

        <ImageView
            android:id="@+id/iv_profilePhoto"
            android:layout_width="143dp"
            android:layout_height="94dp"
            android:layout_marginTop="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/nuroongji" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="챌린지 목표"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_profilePhoto"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_memberCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="신청자 현황"
            app:layout_constraintEnd_toEndOf="@+id/tv_summary"
            app:layout_constraintStart_toStartOf="@+id/tv_summary"
            app:layout_constraintTop_toBottomOf="@+id/tv_summary" />

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="챌린지 기간"
            app:layout_constraintEnd_toEndOf="@+id/tv_memberCount"
            app:layout_constraintStart_toStartOf="@+id/tv_memberCount"
            app:layout_constraintTop_toBottomOf="@+id/tv_memberCount" />

        <ImageView
            android:id="@+id/iv_ing"
            android:layout_width="204dp"
            android:layout_height="171dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="45dp"
            android:rotation="30"
            android:rotationX="17"
            android:rotationY="38"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_memberCount"
            app:layout_constraintHorizontal_bias="0.265"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ing" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>